  "license": "MIT",
  "dependencies": {
    "better-sqlite3": "^7.5.0",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "knex": "^1.0.3",
    "mysql2": "^2.3.3",
    "objection": "^3.0.1",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.6",
    "@babel/core": "^7.17.5",
    "@babel/eslint-parser": "^7.17.0",
    "@babel/node": "^7.16.8",
    "@babel/plugin-proposal-decorators": "^7.17.2",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.21",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.14.0",
    "@typescript-eslint/parser": "^5.14.0",
    "babel-plugin-transform-typescript-metadata": "^0.3.2",
    "babel-watch": "^7.7.0",
    "chokidar-cli": "^3.0.0",
    "eslint": "^8.11.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-formatter-codeframe": "^7.32.1",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^26.1.1",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^27.5.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "supertest": "^6.2.2",
    "typescript": "^4.6.2"
  },
  "scripts": {
    "dev": "run-p *:watch -c -l",
    "start": "babel-node src/run.ts -x '.js,.ts'",
    "start:watch": "babel-watch src/run.ts -e '.js,.ts'",
    "test": "jest",
    "test:watch": "chokidar '**/*.*' --initial -c 'yarn test' --silent",
    "format": "prettier --list-different --write '**/*.{ts,tsx,js,jsx,json,md,html}'",
    "format:check": "prettier --list-different --check '**/*.{ts,tsx,js,jsx,json,md,html}'",
    "lint": "eslint . --format=codeframe",
    "lint:watch": "chokidar '**/*.ts' --initial -c 'yarn lint' --silent"
  },
  "engines": {
    "node": ">=16.14.0",
    "yarn": " >= 1.22.17"
  }
}
